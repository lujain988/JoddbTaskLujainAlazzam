<!DOCTYPE html>
<html ng-app="app">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @Styles.Render("~/Content/css")
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
   
</head>
<body>
    <div class="sidebar">
        <div class="logo">
            SPRUHA <!-- Placeholder text; replace with actual logo or brand name -->
        </div>
        <div class="nav-section">MAIN</div>
        <a ng-href="#/home" class="nav-link">
            <i class="fas fa-home"></i> Dashboard
        </a>
        <a ng-href="#/login" class="nav-link" >
            <i class="fas fa-sign-in-alt"></i> Login
        </a>

        <div class="nav-section">APPLICATIONS</div>
        <a ng-href="#/userList" class="nav-link" >
            <i class="fas fa-users"></i> User List
        </a>
        <a ng-href="#/addUser" class="nav-link" >
            <i class="fas fa-user-plus"></i> Add User
        </a>
     
    </div>


    <!-- Main Content -->
    <div class="main-content">
        <!-- Header Section -->
        <div class="header">
            <h2>Welcome to Dashboard</h2>
            <div class="header-icons">
                <i class="fas fa-bell"></i>
                <i class="fas fa-cog"></i>
                <i class="fas fa-user-circle"></i>
            </div>
        </div>

        <div class="container body-content">
            @RenderBody()
            <hr />
        </div>
    </div>

    <!-- Footer -->
    <footer>
        <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    <!-- Directly load Bootstrap without bundling -->
    <script src="~/Scripts/bootstrap.js"></script>

    <!-- AngularJS Libraries -->
    <script src="~/Scripts/angular.min.js"></script>
    <script src="~/Scripts/angular-route.min.js"></script>

    <!-- AngularJS Application Scripts -->
    <script src="~/Scripts/app/app.js"></script>
    <script src="~/Scripts/app/controllers/LoginController.js"></script>
    <script src="~/Scripts/app/controllers/HomeController.js"></script>
    <script src="~/Scripts/app/controllers/UserListController.js"></script>
    <script src="~/Scripts/app/controllers/AddUserController.js"></script>
    <script src="~/Scripts/app/controllers/UserImportController.js"></script>
    <script src="~/Scripts/app/services/UserImportService.js"></script>
    <script src="~/Scripts/app/services/UserService .js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/ngInfiniteScroll/1.3.0/ng-infinite-scroll.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

</body>
</html>
