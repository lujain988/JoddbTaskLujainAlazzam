<!DOCTYPE html>
<html ng-app="app">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @Styles.Render("~/Content/css")
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
    <style>
        [ng-cloak] {
            display: none !important;
        }
    </style>
    <base href="/" />
</head>
<body ng-cloak>

    <div class="sidebar" ng-show="$root.isLoggedIn" ng-controller="LoginController as vm">
        <div class="logo">Dashboard</div>

        <div class="nav-section">MAIN</div>
        <a ng-href="#/home" class="nav-link" ng-class="{'active': vm.activePath === '/home'}">
            <span class="link-highlight"></span>
            <i class="fas fa-home"></i> Dashboard
        </a>

        <div class="nav-section">APPLICATIONS</div>
        <a ng-href="#/userList" class="nav-link" ng-class="{'active': vm.activePath === '/userList'}">
            <span class="link-highlight"></span>
            <i class="fas fa-users"></i> User List
        </a>
        <a ng-href="#/addUser" class="nav-link" ng-class="{'active': vm.activePath === '/addUser'}">
            <span class="link-highlight"></span>
            <i class="fas fa-user-plus"></i> Add User
        </a>

        <div class="nav-section">ACCOUNT</div>
        <a ng-click="vm.logout()" class="nav-link" ng-class="{'active': vm.activePath === '/login'}">
            <span class="link-highlight"></span>
            <i class="fas fa-sign-out-alt"></i> Logout
        </a>
    </div>



    <div>

       <br /><br />

        <div class="container body-content">
            @RenderBody()
        </div>
    </div>



    @Scripts.Render("~/bundles/jquery")
    <script src="~/Scripts/bootstrap.js"></script>

    <!-- AngularJS Libraries -->
    <script src="~/Scripts/angular.min.js"></script>
    <script src="~/Scripts/angular-route.min.js"></script>

    <!-- AngularJS Application Scripts -->
    <script src="~/Scripts/app/app.js"></script>
    <script src="~/Scripts/app/controllers/LoginController.js"></script>
    <script src="~/Scripts/app/controllers/HomeController.js"></script>
    <script src="~/Scripts/app/controllers/UserListController.js"></script>
    <script src="~/Scripts/app/controllers/AddUserController.js"></script>
    <script src="~/Scripts/app/controllers/UserImportController.js"></script>
    <script src="~/Scripts/app/services/UserImportService.js"></script>
    <script src="~/Scripts/app/services/UserService .js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/ngInfiniteScroll/1.3.0/ng-infinite-scroll.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

</body>
</html>
